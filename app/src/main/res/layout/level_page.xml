<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bege"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pagina2"
        android:id="@+id/boardLevel"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel1"
            android:background="@drawable/round_button"
            android:visibility="gone"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/level1n"
            android:elevation="12sp"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel2"
            android:background="@drawable/round_button"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="280dp"
            android:visibility="gone"
            android:elevation="12sp"
            android:src="@drawable/level2n" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel3"
            android:background="@drawable/round_button"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="80dp"
            android:visibility="gone"
            android:elevation="12sp"
            android:src="@drawable/level3n" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel4"
            android:background="@drawable/round_button"
            android:visibility="visible"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="180dp"
            android:elevation="12sp"
            android:src="@drawable/level4n" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imbLevel5"
            android:background="@drawable/round_button"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            android:elevation="12sp"
            android:src="@drawable/level5n" />

    </RelativeLayout>


</RelativeLayout>