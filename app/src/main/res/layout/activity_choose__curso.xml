<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.kelly.logeasyfinal.ActivityChoose_Curso"
    android:background="#ffffe48f"
    android:padding="15dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="305dp"
        android:layout_height="61dp"
        android:gravity="top|start|center_horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/layoutTopCursos"
        android:layout_centerHorizontal="true"
        android:background="@drawable/topcursospage">

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:id="@+id/layoutCenterCursos"
        android:layout_centerInParent="true"
        android:layout_below="@+id/layoutTopCursos">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutWhiteBack"
            android:background="#ffffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:id="@+id/layoutGridcursos">

                <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/gridcursos"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:columnWidth="150dp"
                    android:numColumns="2"
                    android:verticalSpacing="7dp"
                    android:horizontalSpacing="7dp"
                    android:stretchMode="columnWidth"
                    android:gravity="top"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btncontinuar"
            android:layout_width="196dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/Azul"
            android:elevation="15dp"
            android:gravity="bottom"
            android:src="@drawable/buttoncontinuar" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutBottompCursos"
        android:layout_width="305dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/layoutTopCursos"
        android:layout_alignStart="@+id/layoutTopCursos"
        android:layout_below="@+id/layoutCenterCursos"
        android:layout_marginTop="41dp"
        android:background="@drawable/bottomcursospage"
        android:gravity="bottom|end|center_horizontal"
        android:orientation="vertical">

    </RelativeLayout>

</RelativeLayout>
