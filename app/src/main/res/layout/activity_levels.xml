<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kelly.logeasyfinal.LevelsActivity"
    android:background="#fff7ebcf">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLevelsPage"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="180dp"
                android:layout_height="34dp"
                android:id="@+id/LevelsPageUsername"
                android:background="#ff192030">

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/btnLogout"
                    android:background="@drawable/buttonlogout"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtvUsername"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:typeface="monospace"
                    android:hint="@string/username"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="34dp"
                android:id="@+id/LevelsPageLevel"
                android:background="#ff214726">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:hint="@string/levels"
                    android:id="@+id/txtvLevel"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:typeface="monospace"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/levelboard"
        android:id="@+id/boardLevel"
        android:layout_below="@+id/topLevelsPage"
        android:orientation="vertical"
        android:layout_above="@+id/bottomLevelsPage">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel1"
            android:background="@drawable/level1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel2"
            android:background="@drawable/level2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_below="@+id/imbLevel1"
            android:layout_alignLeft="@+id/imbLevel1"
            android:layout_alignStart="@+id/imbLevel1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel3"
            android:background="@drawable/level3"
            android:layout_marginTop="32dp"
            android:layout_alignTop="@+id/imbLevel2"
            android:layout_toLeftOf="@+id/imbLevel8"
            android:layout_toStartOf="@+id/imbLevel8" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel4"
            android:background="@drawable/level4"
            android:layout_alignTop="@+id/imbLevel3"
            android:layout_toRightOf="@+id/imbLevel3"
            android:layout_toEndOf="@+id/imbLevel3"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel5"
            android:background="@drawable/level5"
            android:layout_below="@+id/imbLevel4"
            android:layout_toRightOf="@+id/imbLevel4"
            android:layout_toEndOf="@+id/imbLevel4"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel6"
            android:background="@drawable/level6"
            android:layout_below="@+id/imbLevel5"
            android:layout_toLeftOf="@+id/imbLevel5"
            android:layout_toStartOf="@+id/imbLevel5" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel7"
            android:background="@drawable/level7"
            android:layout_below="@+id/imbLevel6"
            android:layout_toLeftOf="@+id/imbLevel6"
            android:layout_toStartOf="@+id/imbLevel6" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel8"
            android:background="@drawable/level8"
            android:layout_above="@+id/imbLevel10"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel9"
            android:background="@drawable/level9"
            android:layout_marginTop="25dp"
            android:layout_alignTop="@+id/imbLevel8"
            android:layout_toRightOf="@+id/imbLevel4"
            android:layout_toEndOf="@+id/imbLevel4" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imbLevel10"
            android:background="@drawable/level10"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imbLevel9"
            android:layout_toEndOf="@+id/imbLevel9" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomLevelsPage"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffe593">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="34dp"
                android:id="@+id/LevelsPagePoints"
                android:longClickable="false"
                android:background="#ff8c0000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtvPoints"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:typeface="monospace"
                    android:textColor="#ffffffff"
                    android:hint="@string/points"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="34dp"
                android:id="@+id/LevelsPageScoreboard"
                android:background="#ffffe594"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnScoreboard"
                    android:background="#ffffe48f"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="monospace"
                    android:textColor="#ff192030"
                    android:textStyle="bold"
                    android:text="@string/scoreboard"
                    android:layout_gravity="center" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>
